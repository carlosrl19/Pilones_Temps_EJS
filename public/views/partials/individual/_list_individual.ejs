<div class="container mt-4">
    <div class="dropdown mt-4">
        <div class="select" data-toggle="modal" data-target="#successModal">
            <span>Choose a pilón to save temperature</span>
            <i class="fa fa-chevron-left"></i>
        </div>
        <input type="hidden" name="gender">
        <ul class="dropdown-menu" id="lote">
            <li id="Pilon 01">Pilon 01</li>
            <li id="Pilon 02">Pilon 02</li>
            <li id="Pilon 03">Pilon 03</li>
            <li id="Pilon 04">Pilon 04</li>
        </ul>
    </div>

    <span class="msg"></span>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Pilon's list</h5>
                </button>
            </div>
            <div class="modal-body">
                <input type="checkbox" name="opcion" value="1" onclick="deseleccionarOtros(this)"><hr>
                <input type="checkbox" name="opcion" value="2" onclick="deseleccionarOtros(this)">
                <input type="checkbox" name="opcion" value="3" onclick="deseleccionarOtros(this)">

                <script>
                    function deseleccionarOtros(checkbox) {
                        var checkboxes = document.getElementsByName("opcion");
                        for (var i = 0; i < checkboxes.length; i++) {
                            if (checkboxes[i] !== checkbox) {
                                checkboxes[i].checked = false;
                            }
                        }
                    }
                </script>
            </div>
            <div class="modal-footer">
                <p class="text-muted">Choose a pilón to save temperature.</p>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('span:contains("Choose a pilón to save temperature")').click(function () {
            $('#myModal').modal('show');
        });
    });
</script>